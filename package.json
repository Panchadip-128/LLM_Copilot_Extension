{
  "name": "codesuggestion",
  "displayName": "CodeSuggestion",
  "author": "Panchadip",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codesuggestion.getCode",
        "title": "Get Code Suggestion"
      },
      {
        "command": "codesuggestion.generateWorkflowDiagram",
        "title": "AI: Generate Workflow Diagram"
      }
    ],
    "configuration": {
      "title": "Code Assistant Configuration",
      "properties": {
        "codeAssistant.activeModel": {
          "type": "string",
          "default": "groq",
          "enum": [
            "groq",
            "gemini",
            "gpt"
          ],
          "enumDescriptions": [
            "Use Groq's LLama2 70B model",
            "Use Google's Gemini Pro model",
            "Use OpenAI compatible models"
          ],
          "description": "Select which AI model to use"
        },
        "codeAssistant.groq.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Groq"
        },
        "codeAssistant.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Google Gemini"
        },
        "codeAssistant.gpt.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for GPT"
        },
        "codeAssistant.gpt.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model name for GPT (e.g., gpt-3.5-turbo)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "codesuggestion.generateWorkflowDiagram",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.7.3",
    "openai": "^4.104.0"
  },
  "publisher": "Panchadip"
}
